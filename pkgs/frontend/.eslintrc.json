{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard-with-typescript",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.test.tsx"],
      "extends": [
        "plugin:jest/recommended",
        "plugin:jest/style"
      ],
      "plugins": [
        "jest"
      ],
      "rules": {
        "jest/consistent-test-it": ["error", {"fn": "it"}],
        "jest/require-top-level-describe": ["error"]
      }
    }
  ]
}
